<Page x:Class="SchoolLearnApp.UI.PageService"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SchoolLearnApp.UI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageService" FontFamily="Comic Sans MS">

    <Grid>
        <ScrollViewer>
            <StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,15">
                    <TextBox x:Name="TBSearch"></TextBox>
                    <Button x:Name="BtnSearch" Click="BtnSearch_Click">Искать</Button>
                    <Button x:Name="BtnClear" Click="BtnClear_Click">Очистить</Button>
                    <Button x:Name="BtnAdd" Click="BtnAdd_Click">Добавить</Button>
                </StackPanel>
                <CheckBox x:Name="CheckBoxSort" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,15" Click="CheckBox_Click">Сортировать по алфавиту</CheckBox>
                <ListView x:Name="UCList" MaxWidth="700"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
