<Page x:Class="SchoolLearnApp.UI.PageAuthorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SchoolLearnApp.UI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAuthorization" FontFamily="Comic Sans MS">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Margin="0,10,0,10">Логин:</TextBlock>
            <TextBox x:Name="UserLogin"></TextBox>
            <TextBlock Margin="0,10,0,10" >Пароль:</TextBlock>
            <TextBox x:Name="UserPassword"></TextBox>
            <PasswordBox x:Name="UserPasswordBox" Margin="0,-25,0,0"></PasswordBox>
            <CheckBox x:Name="UserCheckBox" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0" Click="UserCheckBox_Click">Показать пароль</CheckBox>
            <Button x:Name="BtnConfirm" Click="BtnConfirm_Click">Войти</Button>
        </StackPanel>
    </Grid>
</Page>
