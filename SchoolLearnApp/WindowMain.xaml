<Window x:Class="SchoolLearnApp.WindowMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolLearnApp"
        mc:Ignorable="d"
        Title="WindowMain" Height="450" Width="800" FontFamily="Comic Sans MS">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.IsSharedSizeScope="False" Background="#FFE7FABF"/>
        <Image Source="Resources/school_logo.png" HorizontalAlignment="Left" VerticalAlignment="Center"></Image>
        <AccessText HorizontalAlignment="Center" VerticalAlignment="Center" Text="Школа языков 'Леарн'"></AccessText>
        <Button x:Name="BtnBack" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Назад" Click="BtnBack_Click"/>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Row="1" ContentRendered="MainFrame_ContentRendered" ></Frame>
        <Grid Grid.Row="2" Background="#FFE7FABF"></Grid>
    </Grid>
</Window>
